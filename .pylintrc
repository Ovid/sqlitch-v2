[MASTER]
ignore=tests
jobs=0
persistent=no
load-plugins=

[MESSAGES CONTROL]
# Disable specific checks that produce false positives or are not applicable
disable=
    # Click framework false positives - decorators inject parameters at runtime
    missing-kwoa,
    no-value-for-parameter,
    
    # Import patterns required for platform-specific and engine modules  
    import-outside-toplevel,
    
    # Documentation - handled by pydocstyle separately
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    
    # Code duplication - documented for post-alpha refactoring
    duplicate-code,
    
    # Unused arguments in Click handlers - parameters injected but not always used
    # Context: CLI commands receive options via Click decorators for API consistency
    # even when specific handlers don't use all parameters (e.g., quiet, verbose)
    # Post-alpha: Review for removal where appropriate (T131)
    unused-argument,
    
    # Broad exception handling in deployment code - intentional for robustness
    # Context: Deploy/revert operations catch all exceptions to ensure cleanup
    # Post-alpha: Add specific exception types where recovery differs (T134)
    broad-exception-caught,
    
    # Style preferences - non-critical for alpha release
    # Post-alpha: Apply systematic style improvements (T131-T134)
    no-else-raise,
    unnecessary-comprehension,
    consider-using-in,
    raise-missing-from,
    
    # Unused variables - will be cleaned up in post-alpha refactoring
    unused-variable,
    
    # Minor style issues acceptable for alpha
    reimported,
    redefined-outer-name,
    fixme,
    too-few-public-methods,
    too-many-lines

[REPORTS]
output-format=colorized
reports=yes
score=yes

[FORMAT]
max-line-length=100

[BASIC]
good-names=i,j,k,ex,Run,_,db,e,f,fp,id,fd,qa

[DESIGN]
# Thresholds set to accommodate current codebase complexity
# CLI command handlers legitimately have many options/arguments
# Deployment orchestration requires complex state management
# Post-alpha: Revisit for refactoring opportunities (T131-T134)
max-args=16           # deploy.py:1363 has 16 args (CLI option injection)
max-attributes=15
max-public-methods=20
max-locals=50         # verify.py:170 has 50 locals, add.py:126 has 41 locals
max-branches=30       # verify.py:170 has 30 branches (verification state)
max-statements=110    # verify.py:170 has 110 statements
max-returns=8         # identity.py has 8 return statements (platform detection)
max-positional-arguments=13  # add.py:126 has 13 positional args

[SIMILARITIES]
# Minimum lines number of a similarity (reduce noise from short similar blocks)
min-similarity-lines=10
